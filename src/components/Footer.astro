---
const siteName = import.meta.env.SITE_NAME || 'Mon Blog'
const mainDomainUrl = import.meta.env.MAIN_DOMAIN_URL || '#'
const mainDomainName = import.meta.env.MAIN_DOMAIN_NAME || 'Accueil'
const year = new Date().getFullYear()
---

<footer class="border-t border-gray-200 bg-white mt-auto">
  <div class="mx-auto max-w-4xl px-4 py-6 flex flex-col sm:flex-row items-center justify-between gap-2 text-sm text-gray-500">
    <p>&copy; {year} {siteName}</p>
    <a
      href={mainDomainUrl}
      class="hover:text-gray-700 transition-colors"
      target="_blank"
      rel="noopener noreferrer"
    >
      {mainDomainName}
    </a>
  </div>
</footer>
